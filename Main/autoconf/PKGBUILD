#-*- mode: sh -*-
pkgname=autoconf
pkgver=2.69
pkgrel=1
pkgdesc="A GNU tool for automatically configuring source code"
arch=('any')
license=('GPL2' 'GPL3' 'custom')
url="http://www.gnu.org/software/autoconf"
depends=('sh')
makedepends=()  # needed while perl patch is present
checkdepends=()
source=(ftp://ftp.gnu.org/pub/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz)
groups=('lfs-base')

if [[ -n "$(pacman -Ss ^awk$ 2>/dev/null)" ]];then
  depends+=( 'awk')
else
  optdepends+=( 'awk')
fi
if [[ -n "$(pacman -Ss ^m4$ 2>/dev/null)" ]];then
  depends+=( 'm4')
else
  optdepends+=( 'm4')
fi
if [[ -n "$(pacman -Ss ^diffutils$ 2>/dev/null)" ]];then
  depends+=( 'diffutils')
else
  optdepends+=( 'diffutils')
fi
if [[ -n "$(pacman -Ss ^help2man$ 2>/dev/null)" ]];then
  makedepends+=( 'help2man')
else
  optdepends+=( 'help2man')
fi
if [[ -n "$(pacman -Ss ^gcc-fortran$ 2>/dev/null)" ]];then
  checkdepends+=( 'gcc-fortran')
else
  optdepends+=( 'gcc-fortran')
fi

prepare() {
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr
}

build() {
  cd ${pkgname}-${pkgver}
  make
}

check() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make check
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} install

  # license exception
  install -Dm644 COPYING.EXCEPTION \
          $pkgdir/usr/share/licenses/autoconf/COPYING.EXCEPTION

  # remove unwanted file
  rm -f ${pkgdir}/usr/share/info/standards.info
}

md5sums=('50f97f4159805e374639a73e2636f22e')
