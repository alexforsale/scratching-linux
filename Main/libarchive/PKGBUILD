#-*-mode:sh-*-
pkgname=libarchive
pkgver=3.3.3
pkgrel=1
pkgdesc='Multi-format archive and compression library'
arch=(x86_64)
url='http://libarchive.org/'
license=(BSD)
_deps=('zstd')
depends=(acl attr bzip2 expat lz4 openssl xz zlib)
provides=(libarchive.so)
source=("$pkgname-$pkgver.tar.gz::https://github.com/$pkgname/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('720da414e7aebb255fcdaee106894e4d30e2472ac1390c2c15b70c84c7479658')
groups=('lfs-base')

for _d in "${_deps[@]}";do
  if [[ -n "$(pacman -Ss "^${_d}$" 2>/dev/null)" ]];then
    depends+=( "${_d}")
  else
    optdepends+=( "${_d}")
  fi
done

prepare() {
  cd $pkgname-$pkgver 
  #autoreconf -fi
  ./configure --prefix=/usr --disable-static
}

build() {
  cd $pkgname-$pkgver 
  make
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/libarchive/COPYING"
}

sha256sums=('ba7eb1781c9fbbae178c4c6bad1c6eb08edab9a1496c64833d1715d022b30e2e')
