#-*- mode: sh -*-
pkgname=psmisc
pkgver=23.1
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
depends=('ncurses')
source=(http://downloads.sourceforge.net/psmisc/${pkgname}-${pkgver}.tar.xz)
groups=('lfs-base')

prepare(){
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr
}

build() {
  cd ${pkgname}-${pkgver}
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -v -dm755 ${pkgdir}/bin
  mv -v ${pkgdir}/usr/bin/fuser ${pkgdir}/bin
  mv -v ${pkgdir}/usr/bin/killall ${pkgdir}/bin
}
md5sums=('bbba1f701c02fb50d59540d1ff90d8d1')
