#-*-mode:sh-*-
_pkgname=util-image
pkgname=xcb-util-image
pkgver=0.4.0.r0.gd882052
pkgrel=1
pkgdesc="Utility libraries for XC Binding - Port of Xlib's XImage and XShmImage functions"
arch=('x86_64')
url="https://xcb.freedesktop.org"
license=('custom')
depends=('libxcb>=1.7' 'xcb-util>=0.3.9')
makedepends=('xorg-util-macros' 'doxygen')
source=("xcb/util-image::git://anongit.freedesktop.org/git/xcb/util-image/")
sha512sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' | sed "s/$_pkgname.//g"
}

prepare(){
  cd "$_pkgname"
  git submodule update --init
  NOCONFIGURE=1 ./autogen.sh
  ./configure --prefix=/usr --disable-static --with-doxygen
}

build() {
  cd "$_pkgname"
  make
}

check() {
  cd "$_pkgname"
  make check
}

package() { 
  cd "$_pkgname"
  make DESTDIR="${pkgdir}" install

  install -D -m644 COPYING \
          ${pkgdir}/usr/share/licenses/${pkgname}/COPYING
}
