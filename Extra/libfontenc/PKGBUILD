#-*-mode:sh-*-
pkgname=libfontenc
pkgver=1.1.3.r7.gd7f6618
pkgrel=1
pkgdesc="X11 font encoding library"
arch=('x86_64')
url="https://xorg.freedesktop.org/"
license=('custom')
depends=('zlib')
makedepends=('pkgconfig' 'xorgproto' 'xorg-font-util' 'xorg-util-macros')
source=(xorg/lib/libfontenc::git://anongit.freedesktop.org/git/xorg/lib/libfontenc)
sha256sums=('SKIP')
groups=('xorg')

pkgver() {
  cd "$pkgname"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g' | sed "s/$pkgname.//g"
}

prepare(){
  cd $pkgname
  NOCONFIGURE=1 ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
              --with-encodingsdir=/usr/share/fonts/encodings      
}
build() {
  cd ${pkgname}
  make
}

package() {
  cd ${pkgname}
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
}
