#-*-mode:sh-*-
pkgname=nasm
pkgver=2.14
pkgrel=1
pkgdesc='80x86 assembler designed for portability and modularity'
url='https://www.nasm.us'
arch=('x86_64')
license=('BSD')
depends=('glibc')
_makedeps=('perl-font-ttf' 'perl-sort-versions' 'fontconfig' 'adobe-source-sans-pro-fonts'
          'ttf-liberation' 'ghostscript' 'xmlto' 'asciidoc')
makedepends=()
source=(https://www.nasm.us/pub/nasm/releasebuilds/${pkgver}/${pkgname}-${pkgver}.tar.xz)

for _m in "${_makedeps[@]}";do
  if [[ -n "$(pacman -Ss "^${_m}$" 2>/dev/null)" ]];then
    depends+=( "${_m}")
  else
    optdepends+=( "${_m}")
  fi
done

build() {
  cd ${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make
  if [[ -n "$(pacman -Qq "${_makedeps}" 2>/dev/null)" ]];then
  make -C doc
  fi
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
  if [[ -n "$(pacman -Qq "${_makedeps}" 2>/dev/null)" ]];then
  make DESTDIR="${pkgdir}" install_rdf
  fi
  install -Dm 644 LICENSE -t "${pkgdir}"/usr/share/licenses/nasm
}
sha512sums=('0f7f1b8b0cd4ac62df1dc203789b74670ebe10f3be10af9984331b1c348745ed31a43aca77c5c771016a718fa2c7c8805c1c9edfdd6b0fe83ee0937cb0dd3d23')
