#-*-mode:sh-*-
pkgname=pango
pkgver=1.42.4
pkgrel=1
pkgdesc="A library for layout and rendering of text"
url="https://www.pango.org/"
arch=(x86_64)
license=(LGPL)
_deps=()
depends=(libthai libxft harfbuzz fribidi cairo)
_makedeps=(gtk-doc)
makedepends=(gobject-introspection help2man git meson)
checkdepends=(ttf-dejavu cantarell-fonts)
_commit=a6a89818246b0b14c0fe3d00d6120929fc0a11d9  # tags/1.42.4^0
source=("git+https://gitlab.gnome.org/GNOME/pango.git#commit=$_commit")
sha256sums=('SKIP')

for _d in "${_deps[@]}";do
  if [[ -n "$(pacman -Qq "${_d}" 2>/dev/null)" ]];then
    depends+=( "${_d}")
  else
    optdepends+=( "${_d}")
  fi
done

for _m in "${_makedeps[@]}";do
  if [[ -n "$(pacman -Ss "^${_m}$" 2>/dev/null)" ]];then
    depends+=( "${_m}")
  else
    optdepends+=( "${_m}")
  fi
done

_confargs=()
if [[ -n "$(pacman -Qq "gtk-doc" 2>/dev/null)" ]];then
  _confargs+=( -D enable_docs=true)
fi

pkgver() {
  cd $pkgname
  git describe --tags | sed 's/-/+/g'
}

prepare() {
  cd $pkgname
}

build() {
  meson-helper $pkgname build 
  ninja -C build
}

check() {
  meson test -C build
}

package() {
  DESTDIR="$pkgdir" meson install -C build
  rm -r "$pkgdir"/usr/{lib,share}/installed-tests
}
